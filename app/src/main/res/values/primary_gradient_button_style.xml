<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryGradientButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_regular</item>

        <!-- Background -->
        <item name="android:background">@drawable/theme_all_primary</item>

        <!-- Remove default Material tint -->
        <item name="backgroundTint">@null</item>

        <!-- Optional spacing -->
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>